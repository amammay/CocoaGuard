<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@mipmap/cocoa_tree"
    >
    <SearchView
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchViewSymptom"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200dp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_below="@id/searchViewSymptom">

        <Button
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCamera"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:width="170dp"
            android:background="@color/greenButton"
            />

        <Button
            android:text="Maps"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMaps"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:width="170dp"
            android:background="@color/greenButton"
            />

        <Button
            android:text="@string/Social_Media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSocialMedia"
            android:width="170dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:background="@color/greenButton"
            />

        <Button
            android:text="@string/Cost_Estimator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCostEstimator"
            android:width="170dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:background="@color/greenButton"


            />

        <Button
            android:text="@string/Fungicide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFungicide"
            android:width="170dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:background="@color/greenButton"


            />


        <Button
            android:text="@string/Fertilizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFertilizer"
            android:width="170dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:background="@color/greenButton"

            />

        <Button
            android:text="@string/Diseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDiseases"
            android:width="170dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:background="@color/greenButton"

            />

        <Button
            android:text="@string/Pesticide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPesticide"
            android:width="170dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:background="@color/greenButton"
            />
    </GridLayout>






</RelativeLayout>
